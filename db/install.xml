<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/edukav/db"
       VERSION="2026021003"
       COMMENT="Tablas del plugin local edukav">

    <TABLES>

        <!-- FAQs -->
        <TABLE NAME="edukav_faqs" COMMENT="Preguntas frecuentes">
            <FIELDS>
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
            <FIELD NAME="question" TYPE="char" LENGTH="255" NOTNULL="true"/>
            <FIELD NAME="answer" TYPE="text" NOTNULL="true"/>
            <FIELD NAME="visible" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1"/>
            <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
            <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

        <!-- Tutorials -->
        <TABLE NAME="edukav_tutorials" COMMENT="Tutoriales">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="description" TYPE="text"/>
                <FIELD NAME="url" TYPE="text" NOTNULL="true"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>


        <!-- Contacts -->
       <TABLE NAME="edukav_contacts" COMMENT="Mensajes de contacto">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="100" NOTNULL="true"/>
                <FIELD NAME="email" TYPE="char" LENGTH="100" NOTNULL="true"/>
                <FIELD NAME="subject" TYPE="char" LENGTH="255"/>
                <FIELD NAME="message" TYPE="text" NOTNULL="true"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>


        <!-- FAQs Users -->
        <TABLE NAME="edukav_faqs_users" COMMENT="Preguntas enviadas por usuarios">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="email" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="question" TYPE="text" NOTNULL="true"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

    </TABLES>
</XMLDB>
